                <DataTrigger Binding="{Binding OnOffStatus}" Value="0">
                    <Setter Property="Background" Value="#FF3120D4"/>
                    <Setter Property="Foreground" Value="White"/>
                    <Setter Property="Content" Value="OFF"/>
                </DataTrigger>
