            <Style.Triggers>
                <DataTrigger Binding="{Binding OnOffStatus}" Value="1">
                    <Setter Property="Background" Value="Lime"/>
                    <Setter Property="Foreground" Value="Black"/>
                    <Setter Property="Content" Value="ON"/>
